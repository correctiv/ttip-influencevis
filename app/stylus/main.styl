@import 'helper'
@import 'viz'
@import 'selects'

/* variables */
$lightgrey = #999
$linkColor = #555
$grey = #777
$black = #333

.ttip-viz
  color: $black
  font-size: 1em
  line-height: 1.4
  font-family: Georgia, "Times New Roman", Times, serif

  *
    box-sizing: border-box

  html
  button
  input
  select
  textarea
    color: $black

  a
  a:visited
    color: $linkColor
    text-decoration: none

  a:hover
    color: lighten($linkColor,10%)
