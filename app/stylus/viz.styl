.ttip-viz
  width: 100%
  max-width: 1000px
  margin: 0 auto
  position: relative
  background: white

  .viz-core
  .viz-info
    width: 100%
    float: left
    user-select: none
    overflow: visible

  .viz-core
    @media screen and (min-width: 768px)
      width: 66.66%

    .organisation
      cursor: pointer
      stroke: #fff

    .person
      cursor: pointer
      opacity: 0
      transition: opacity .4s

    .person-unknown
      cursor: default

    .chapter-title
      position: absolute
      font-size: 12px
      background: rgba(255,255,255,.5)
      padding: 10px
      pointer-events: none
      width: 200px

  .viz-info
    font-size: 12px
    position: relative

    @media screen and (min-width: 768px)
      width: 33.33%

    &.active
      .viz-info-close
        display: block

    .viz-info-close
      position: absolute
      right: 1em
      top: .5em
      font-size: 20px
      cursor: pointer
      display: none

      &:hover
        opacity: .75

    .chapter-list
      margin: 10px 0
      padding: 0
      list-style: none

      li
        display: block
        margin: 0
        padding: 10px
        background: #eee
        border-bottom: 1px solid #bbb

    .info-title
      padding: 0
      margin: 0
      font-family: "Neuzeit", sans-serif
      font-weight: bold
      font-size: 18px

    .info-headline
      margin: 10px 0
      font-weight: bold
      font-family: "Neuzeit", sans-serif
      font-size: 14px

    .info-subtitle
      font-style: italic
      padding-top: 5px

    .info-person,
    .info-organisation
      border-radius: 3px
      border: 1px solid #dadada
      padding: 10px

    .info-organisation-name
      font-weight: bold
      padding: 5px 0 10px 0

    .info-list
      margin: 0
      padding: 0
      list-style: none

      li
        margin: 0
        padding: 0 0 10px 20px
        cursor: pointer
        line-height: 1.4

        .color-box
          display: inline-block
          width: 10px
          height: 10px
          margin: 0 5px 0 -20px

        &:hover
          opacity: .8

    .info-person-organisation__title
      margin: 0
      padding: 0

    .info-person-organisation__date
      display: inline-block

    .info-organisation-persons
      margin-top: 20px
      list-style: none

      .color-box
        border-radius: 20px

.ttip-viz
  .tooltip
    background: rgba(255,255,255,.85)
    pointer-events: none
    position: absolute
    padding: 1em
    font-size: 12px
    max-width: 200px

    .tooltip-title
      font-weight: bold
      margin-bottom: 5px

    .tooltip-person-text
      margin-bottom: 5px
